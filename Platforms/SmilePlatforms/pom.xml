    <groupId>com.smilecoms</groupId>
    <artifactId>SmilePlatforms</artifactId>
    <packaging>ear</packaging>

    <name>HOBIT :: Platforms :: SmilePlatforms</name>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
    
    <pluginRepositories>
        <pluginRepository>
            <id>central</id>
            <name>Central Repository</name>
            <url>https://repo.maven.apache.org/maven2</url>
            <layout>default</layout>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
            <releases>
                <updatePolicy>never</updatePolicy>
            </releases>
        </pluginRepository>
    </pluginRepositories>
    
    <repositories>
        <repository>
            <id>central</id>
            <name>Central Repository</name>
            <url>https://repo.maven.apache.org/maven2</url>
            <layout>default</layout>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
    </repositories>
  
    <build>
        <finalName>${project.artifactId}</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>${maven.compiler.source}</source>
                    <target>${maven.compiler.target}</target>
                </configuration>
                <version>${hobit.maven-compiler.version}</version>
            </plugin>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>${hobit.maven-ant-plugin.version}</version>
                <executions>
                    <execution>
                        <id>Copy</id>
                        <phase>install</phase>
                        <configuration>
                            <target>
                                <copy tofile="/tmp/apps/SmilePlatforms.ear">
                                    <fileset dir="./target/">
                                        <include name="SmilePlatforms.ear"/>
                                    </fileset>
                                </copy>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-ear-plugin</artifactId>
                <version>${hobit.maven-ear-plugin.version}</version>
                <configuration>
                    <version>7</version>
                    <defaultLibBundleDir>lib</defaultLibBundleDir>
                    <modules>
                        <ejbModule>
                            <groupId>com.smilecoms</groupId>
                            <artifactId>BM</artifactId>
                            <bundleFileName>BM.jar</bundleFileName>
                        </ejbModule>
                        <ejbModule>
                            <groupId>com.smilecoms</groupId>
                            <artifactId>AM</artifactId>
                            <bundleFileName>AM.jar</bundleFileName>
                        </ejbModule>
                        <ejbModule>
                            <groupId>com.smilecoms</groupId>
                            <artifactId>CM</artifactId>
                            <bundleFileName>CM.jar</bundleFileName>
                        </ejbModule>
                        <ejbModule>
                            <groupId>com.smilecoms</groupId>
                            <artifactId>CTI</artifactId>
                            <bundleFileName>CTI.jar</bundleFileName>
                        </ejbModule>
                        <ejbModule>
                            <groupId>com.smilecoms</groupId>
                            <artifactId>ET</artifactId>
                            <bundleFileName>ET.jar</bundleFileName>
                        </ejbModule>
                        <ejbModule>
                            <groupId>com.smilecoms</groupId>
                            <artifactId>HWF</artifactId>
                            <bundleFileName>HWF.jar</bundleFileName>
                        </ejbModule>
                        <ejbModule>
                            <groupId>com.smilecoms</groupId>
                            <artifactId>IM</artifactId>
                            <bundleFileName>IM.jar</bundleFileName>
                        </ejbModule>
                        <ejbModule>
                            <groupId>com.smilecoms</groupId>
                            <artifactId>IMSSC</artifactId>
                            <bundleFileName>IMSSC.jar</bundleFileName>
                        </ejbModule>
                        <ejbModule>
                            <groupId>com.smilecoms</groupId>
                            <artifactId>MM</artifactId>
                            <bundleFileName>MM.jar</bundleFileName>
                        </ejbModule>
                        <ejbModule>
                            <groupId>com.smilecoms</groupId>
                            <artifactId>PC</artifactId>
                            <bundleFileName>PC.jar</bundleFileName>
                        </ejbModule>
                        <ejbModule>
                            <groupId>com.smilecoms</groupId>
                            <artifactId>PM</artifactId>
                            <bundleFileName>PM.jar</bundleFileName>
                        </ejbModule>
                        <ejbModule>
                            <groupId>com.smilecoms</groupId>
                            <artifactId>PVS</artifactId>
                            <bundleFileName>PVS.jar</bundleFileName>
                        </ejbModule>
                        <ejbModule>
                            <groupId>com.smilecoms</groupId>
                            <artifactId>POS</artifactId>
                            <bundleFileName>POS.jar</bundleFileName>
                        </ejbModule>
                        <ejbModule>
                            <groupId>com.smilecoms</groupId>
                            <artifactId>SF</artifactId>
                            <bundleFileName>SF.jar</bundleFileName>
                        </ejbModule>
                        <ejbModule>
                            <groupId>com.smilecoms</groupId>
                            <artifactId>SN</artifactId>
                            <bundleFileName>SN.jar</bundleFileName>
                        </ejbModule>
                        <ejbModule>
                            <groupId>com.smilecoms</groupId>
                            <artifactId>TNF</artifactId>
                            <bundleFileName>TNF.jar</bundleFileName>
                        </ejbModule>
               <!--         <ejbModule>
                            <groupId>com.smilecoms</groupId>
                            <artifactId>TT</artifactId>
                            <bundleFileName>TT.jar</bundleFileName>
                        </ejbModule> -->
                    </modules>
                </configuration>
            </plugin>
        </plugins>
    </build>
    
